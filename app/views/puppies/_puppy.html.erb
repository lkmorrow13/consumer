<div class="puppy card col-3" id="puppy-<%= puppy.id %>">
	<img src="" alt="" class="card-img-top">
	<div class="card-body">
     <% if puppy.images.attached? %>
         <%= image_tag rails_blob_url(puppy.images[0], host: 'rockyadmin.herokuapp.com'), class: 'card-img-top cardimagesize' %>
     <% end %>
		<h3 class="card-title"><%= puppy.name %></h3>
		<h5 class="card-text">Birthday: <%= puppy.birthday %></h5>
		<h5 class="card-text"><%= puppy.info %></h5>
	</div>
</div>